<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/PrimaryColorCodeOne"
    android:layout_marginVertical="10dp"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/listed_item_single_img"
        android:src="@drawable/person"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listed_item_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:fontFamily="@font/source_serif_pro_regular"
        android:text="Product Name"
        android:textColor="@color/AdditionalColorCodeOne"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/listed_item_single_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listed_item_single_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:fontFamily="@font/source_serif_pro_regular"
        android:text="Product Price"
        android:textColor="@color/AdditionalColorCodeOne"
        android:textSize="20dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/listed_item_single_img"
        app:layout_constraintTop_toBottomOf="@+id/listed_item_single_name" />

</androidx.constraintlayout.widget.ConstraintLayout>