<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/AdditionalColorCodeOne"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".businessHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:src="@drawable/person"
            android:padding="12dp"
            android:background="@drawable/home_person_avatar"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/user_name_buss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:fontFamily="@font/source_serif_pro_regular"
                android:textStyle="bold"
                android:textColor="@color/PrimaryColorCodeOne"
                android:textSize="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Income"
                    android:fontFamily="@font/source_serif_pro_regular"
                    android:textStyle="bold"
                    android:textColor="@color/PrimaryColorCodeTwo"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/PrimaryColorCodeTwo"
                    android:text="â‚¹ 200"
                    android:fontFamily="@font/source_serif_pro_regular"
                    android:textStyle="italic|bold"
                    android:textSize="18dp"/>

            </LinearLayout>
        </LinearLayout>
<!--        <com.google.android.material.button.MaterialButton-->
<!--            android:layout_weight="1"-->
<!--            android:layout_width="20dp"-->
<!--            android:layout_height="match_parent"-->
<!--            app:icon="@drawable/cart_logo"-->
<!--            app:iconTint="@color/PrimaryColorCodeOne"-->
<!--            android:background="@drawable/cart_btn_shape"-->
<!--            />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_buy_metarial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Buy Metarials"
            android:fontFamily="@font/source_serif_pro_regular"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            android:elevation="20dp"
            android:backgroundTint="@color/PrimaryColorCodeOne"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_item_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Item"
            android:fontFamily="@font/source_serif_pro_regular"
            android:textAllCaps="false"
            android:paddingHorizontal="35dp"
            android:textStyle="bold"
            android:paddingVertical="15dp"
            android:elevation="20dp"
            android:backgroundTint="@color/PrimaryColorCodeOne"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Orders"
            android:fontFamily="@font/source_serif_pro_regular"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:paddingVertical="15dp"
            android:paddingHorizontal="45dp"
            android:elevation="20dp"
            android:backgroundTint="@color/PrimaryColorCodeOne"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/listed_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listed Item"
            android:fontFamily="@font/source_serif_pro_regular"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:elevation="20dp"
            android:backgroundTint="@color/PrimaryColorCodeOne"
            />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        style="@style/EdgeColor"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="320dp"
                android:layout_height="140dp"
                android:layout_marginVertical="8dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                app:cardCornerRadius="15dp"
                android:background="@color/PrimaryColorCodeTwo"
                app:cardElevation="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@color/PrimaryColorCodeTwo"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/banner2"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="320dp"
                android:layout_height="140dp"
                android:layout_marginVertical="8dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                app:cardCornerRadius="15dp"
                android:background="@color/PrimaryColorCodeTwo"
                app:cardElevation="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@color/PrimaryColorCodeTwo"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/banner3"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="320dp"
                android:layout_height="140dp"
                android:layout_marginVertical="8dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                app:cardCornerRadius="15dp"
                android:background="@color/PrimaryColorCodeTwo"
                app:cardElevation="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@color/PrimaryColorCodeTwo"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/banner1"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Orders"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/line"
        android:textColor="@color/AdditionalColorCodeTwo"/>

</LinearLayout>