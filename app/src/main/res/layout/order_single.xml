<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/PrimaryColorCodeTwo"
    android:orientation="vertical"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/PrimaryColorCodeOne"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/order_item_img"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/person"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/order_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/source_serif_pro_regular"
            android:text="Product Name"
            android:textColor="@color/AdditionalColorCodeOne"
            android:textSize="20dp"
            android:textStyle="bold"

            app:layout_constraintStart_toEndOf="@+id/order_item_img"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/order_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/source_serif_pro_regular"
            android:text="Product Price"
            android:textColor="@color/AdditionalColorCodeOne"
            android:textSize="20dp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/order_item_img"
            app:layout_constraintTop_toBottomOf="@+id/order_item_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/order_buyer_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/source_serif_pro_regular"
        android:text="Buyer Phone Number: +91252578934"
        android:textColor="@color/AdditionalColorCodeOne"
        android:textSize="20dp"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/order_buyer_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/source_serif_pro_regular"
        android:text="72/11 Kolkata WestBengal India"
        android:textColor="@color/AdditionalColorCodeOne"
        android:textSize="20dp"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/source_serif_pro_regular"
        android:text="Cash On Delivery"
        android:textColor="@color/AdditionalColorCodeOne"
        android:textSize="20dp"
        android:textStyle="normal"/>



</LinearLayout>