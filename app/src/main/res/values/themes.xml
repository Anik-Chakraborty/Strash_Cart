<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Strash_Cart" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextInputEditText">
        <item name="singleLine">true</item>
        <item name="fontFamily">@font/source_serif_pro_regular</item>
        <item name="textFillColor">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
    </style>
    <style name="menu_btn">
        <item name="fontFamily">@font/source_serif_pro_regular</item>
        <item name="textFillColor">@color/AdditionalColorCodeOne</item>
        <item name="android:textSize">20dp</item>
        <item name="backgroundTint">@color/PrimaryColorCodeOne</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="background">@drawable/txtview_menu_shape</item>
        <item name="android:textAlignment">textStart</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="EdgeColor">
        <item name="android:colorEdgeEffect">@color/PrimaryColorCodeOne</item>
    </style>
</resources>